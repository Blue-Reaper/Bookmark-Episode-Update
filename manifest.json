{
  "manifest_version": 2,
  "name": "Bookmark Episode Update",
  "version": "0.6",
  "description": "Increase the episode in your bookmark title with one simple click.",

  "browser_specific_settings": {
    "gecko": {
      "id": "bookmarkEpisodeUpdate@blue-reaper"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_popup": "popup.html",
    "theme_icons": [{
      "light": "icons/icon-light-32.png",
      "dark": "icons/icon-dark-32.png",
      "size": 32
    }]
  },

  "icons": {
    "48": "icons/icon-light-48.png",
    "96": "icons/icon-light-96.png"
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ]
}
